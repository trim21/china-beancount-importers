{
  "extends": [
    "github>Trim21/renovate-config",
    "github>Trim21/renovate-config:monthly"
  ],
  "separateMajorMinor": false,
  "separateMinorPatch": false,
  "rangeStrategy": "widen",
  "pip_requirements": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "deps-docs",
      "semanticCommitScope": "docs",
      "rangeStrategy": "pin",
      "matchPackageNames": [
        "/^sphinx/"
      ]
    },
    {
      "matchDepTypes": [
        "dev-dependencies"
      ],
      "rangeStrategy": "pin"
    }
  ]
}
