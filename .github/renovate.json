{
  "extends": [
    "github>Trim21/renovate-config",
    "github>Trim21/renovate-config:monthly"
  ],
  "separateMajorMinor": false,
  "separateMinorPatch": false,
  "rangeStrategy": "widen",
  "pip_requirements": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "deps-docs",
      "semanticCommitScope": "docs",
      "packagePatterns": [
        "^sphinx"
      ],
      "rangeStrategy": "pin"
    },
    {
      "depTypeList": [
        "dev-dependencies"
      ],
      "rangeStrategy": "pin"
    }
  ]
}
