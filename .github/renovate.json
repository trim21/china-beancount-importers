{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>Trim21/renovate-config",
    "github>Trim21/renovate-config:monthly"
  ],
  "labels": [
    "ci:auto-merge",
    "dependencies"
  ],
  "separateMajorMinor": false,
  "separateMinorPatch": false,
  "rangeStrategy": "widen",
  "pip_requirements": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "deps-docs",
      "semanticCommitScope": "docs",
      "matchPackageNames": [
        "sphinx*",
        "recommonmark"
      ],
      "rangeStrategy": "pin"
    }
  ]
}
